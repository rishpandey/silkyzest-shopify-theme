    a section with a list of collection which filters the list of products and a list of products for the selected collection
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-collection-filter-{{ ai_gen_id }} {
    padding: {{ block.settings.section_padding }}px 0 !important;
  }

  .ai-collection-filter-container-{{ ai_gen_id }} {
    max-width: {{ block.settings.container_width }}px;
    margin: 0 auto;
    padding: 0 20px;
  }

  .ai-collection-filter-heading-{{ ai_gen_id }} {
    text-align: {{ block.settings.heading_alignment }};
    margin-bottom: 20px;
    font-size: {{ block.settings.heading_size }}px;
    color: {{ block.settings.heading_color }};
  }

  .ai-collection-filter-description-{{ ai_gen_id }} {
    text-align: {{ block.settings.description_alignment }};
    margin-bottom: 40px;
    font-size: {{ block.settings.description_size }}px;
    color: {{ block.settings.description_color }};
    line-height: 1.6;
  }

  .ai-collection-filter-tabs-{{ ai_gen_id }} {
    display: flex;
    flex-wrap: wrap;
    gap: 12px;
    justify-content: {{ block.settings.tabs_alignment }};
    margin-bottom: 40px;
    padding-bottom: 20px;
    border-bottom: 1px solid {{ block.settings.border_color }};
  }

  .ai-collection-filter-tab-{{ ai_gen_id }} {
    padding: 12px 24px;
    background-color: {{ block.settings.tab_bg_color }};
    color: {{ block.settings.tab_text_color }};
    border: 1px solid {{ block.settings.tab_border_color }};
    border-radius: {{ block.settings.tab_border_radius }}px;
    cursor: pointer;
    transition: all 0.3s ease;
    font-size: 14px;
    font-weight: 500;
  }

  .ai-collection-filter-tab-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.tab_hover_bg_color }};
    color: {{ block.settings.tab_hover_text_color }};
    border-color: {{ block.settings.tab_hover_border_color }};
  }

  .ai-collection-filter-tab-{{ ai_gen_id }}.active {
    background-color: {{ block.settings.tab_active_bg_color }};
    color: {{ block.settings.tab_active_text_color }};
    border-color: {{ block.settings.tab_active_border_color }};
  }

  .ai-collection-filter-products-{{ ai_gen_id }} {
    display: grid;
    grid-template-columns: repeat({{ block.settings.products_per_row }}, 1fr);
    gap: {{ block.settings.product_gap }}px;
  }

  .ai-collection-filter-product-{{ ai_gen_id }} {
    opacity: 0;
    transform: translateY(20px);
    transition: opacity 0.4s ease, transform 0.4s ease;
  }

  .ai-collection-filter-product-{{ ai_gen_id }}.visible {
    opacity: 1;
    transform: translateY(0);
  }

  .ai-collection-filter-product-card-{{ ai_gen_id }} {
    background-color: {{ block.settings.card_bg_color }};
    border-radius: {{ block.settings.card_border_radius }}px;
    overflow: hidden;
    transition: transform 0.3s ease, box-shadow 0.3s ease;
    height: 100%;
    display: flex;
    flex-direction: column;
  }

  .ai-collection-filter-product-card-{{ ai_gen_id }}:hover {
    transform: translateY(-4px);
    box-shadow: 0 8px 16px rgba(0, 0, 0, 0.1);
  }

  .ai-collection-filter-product-image-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    padding-bottom: 100%;
    overflow: hidden;
    {% comment %} background-color: #f4f4f4; {% endcomment %}
  }

  .ai-collection-filter-product-image-{{ ai_gen_id }} img {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .ai-collection-filter-product-image-placeholder-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: #f4f4f4;
  }

  .ai-collection-filter-product-image-placeholder-{{ ai_gen_id }} svg {
    width: 60%;
    height: 60%;
    opacity: 0.3;
  }

  .ai-collection-filter-product-info-{{ ai_gen_id }} {
    padding: 16px;
    flex-grow: 1;
    display: flex;
    flex-direction: column;
  }

  .ai-collection-filter-product-title-{{ ai_gen_id }} {
    font-size: 16px;
    font-weight: 600;
    margin: 0 0 8px;
    color: {{ block.settings.product_title_color }};
    line-height: 1.4;
  }

  .ai-collection-filter-product-title-{{ ai_gen_id }} a {
    color: inherit;
    text-decoration: none;
  }

  .ai-collection-filter-product-title-{{ ai_gen_id }} a:hover {
    text-decoration: underline;
  }

  .ai-collection-filter-product-price-{{ ai_gen_id }} {
    font-size: 1.4rem;
    font-weight:  500;
    color: {{ block.settings.product_price_color }};
    margin-bottom: 12px;
  }

  .ai-collection-filter-product-button-{{ ai_gen_id }} {
    display: inline-block;
    padding: 10px 20px;
    background-color: {{ block.settings.button_bg_color }};
    color: {{ block.settings.button_text_color }};
    text-decoration: none;
    border-radius: {{ block.settings.button_border_radius }}px;
    text-align: center;
    transition: background-color 0.3s ease;
    font-size: 14px;
    font-weight: 500;
    margin-top: auto;
  }

  .ai-collection-filter-product-button-{{ ai_gen_id }}:hover {
    background-color: {{ block.settings.button_hover_bg_color }};
    color: {{ block.settings.button_hover_text_color }};
  }

  .ai-collection-filter-empty-{{ ai_gen_id }} {
    text-align: center;
    padding: 60px 20px;
    color: #666;
    font-size: 16px;
  }

  @media screen and (max-width: 989px) {
    .ai-collection-filter-products-{{ ai_gen_id }} {
      grid-template-columns: repeat({{ block.settings.products_per_row_tablet }}, 1fr);
    }
  }

  @media screen and (max-width: 749px) {
    .ai-collection-filter-products-{{ ai_gen_id }} {
      grid-template-columns: repeat({{ block.settings.products_per_row_mobile }}, 1fr);
    }

    .ai-collection-filter-tabs-{{ ai_gen_id }} {
      justify-content: center;
    }

    .ai-collection-filter-tab-{{ ai_gen_id }} {
      padding: 10px 16px;
      font-size: 13px;
    }
  }
{% endstyle %}

<collection-filter-{{ ai_gen_id }} class="ai-collection-filter-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-collection-filter-container-{{ ai_gen_id }}">
    {% if block.settings.heading != blank %}
      <h2 class="ai-collection-filter-heading-{{ ai_gen_id }}">{{ block.settings.heading }}</h2>
    {% endif %}

    {% if block.settings.description != blank %}
      <div class="ai-collection-filter-description-{{ ai_gen_id }}">{{ block.settings.description }}</div>
    {% endif %}

    <div class="ai-collection-filter-tabs-{{ ai_gen_id }}">
      {% if block.settings.show_all_tab %}
        <button
          class="ai-collection-filter-tab-{{ ai_gen_id }} active"
          data-collection="all"
        >
          {{ block.settings.all_tab_label }}
        </button>
      {% endif %}

      {% for i in (1..5) %}
        {% liquid
          assign collection_key = 'collection_' | append: i
          assign label_key = 'collection_' | append: i | append: '_label'
          assign collection = block.settings[collection_key]
          assign label = block.settings[label_key]
        %}

        {% if collection != blank %}
          <button
            class="ai-collection-filter-tab-{{ ai_gen_id }} {% unless block.settings.show_all_tab %}{% if forloop.first %}active{% endif %}{% endunless %}"
            data-collection="{{ collection.handle }}"
          >
            {% if label != blank %}
              {{ label }}
            {% else %}
              {{ collection.title }}
            {% endif %}
          </button>
        {% endif %}
      {% endfor %}
    </div>

    <div class="ai-collection-filter-products-{{ ai_gen_id }}">
      {% if block.settings.show_all_tab %}
        {% for i in (1..5) %}
          {% liquid
            assign collection_key = 'collection_' | append: i
            assign collection = block.settings[collection_key]
          %}

          {% if collection != blank %}
            {% for product in collection.products limit: block.settings.products_limit %}
              <div
                class="ai-collection-filter-product-{{ ai_gen_id }}"
                data-collection="{{ collection.handle }}"
              >
                <div class="ai-collection-filter-product-card-{{ ai_gen_id }}">
                  <div class="ai-collection-filter-product-image-{{ ai_gen_id }}">
                    {% if product.featured_image %}
                      <img
                        src="{{ product.featured_image | image_url: width: 600 }}"
                        alt="{{ product.featured_image.alt | escape }}"
                        loading="lazy"
                        width="600"
                        height="600"
                      >
                    {% else %}
                      <div class="ai-collection-filter-product-image-placeholder-{{ ai_gen_id }}">
                        {{ 'product-1' | placeholder_svg_tag }}
                      </div>
                    {% endif %}
                  </div>
                  <div class="ai-collection-filter-product-info-{{ ai_gen_id }}">
                    <h3 class="ai-collection-filter-product-title-{{ ai_gen_id }}">
                      <a href="{{ product.url }}">{{ product.title }}</a>
                    </h3>
                    <div class="ai-collection-filter-product-price-{{ ai_gen_id }}">
                      {{ product.price | money }}
                    </div>
                    <a
                      href="{{ product.url }}"
                      class="ai-collection-filter-product-button-{{ ai_gen_id }}"
                    >
                      {{ block.settings.button_label }}
                    </a>
                  </div>
                </div>
              </div>
            {% endfor %}
          {% endif %}
        {% endfor %}
      {% else %}
        {% for i in (1..5) %}
          {% liquid
            assign collection_key = 'collection_' | append: i
            assign collection = block.settings[collection_key]
          %}

          {% if collection != blank %}
            {% for product in collection.products limit: block.settings.products_limit %}
              <div
                class="ai-collection-filter-product-{{ ai_gen_id }} {% if forloop.parentloop.first %}{% else %}{% endif %}"
                data-collection="{{ collection.handle }}"
                {% unless forloop.parentloop.first %}style="display: none;"{% endunless %}
              >
                <div class="ai-collection-filter-product-card-{{ ai_gen_id }}">
                  <div class="ai-collection-filter-product-image-{{ ai_gen_id }}">
                    {% if product.featured_image %}
                      <img
                        src="{{ product.featured_image | image_url: width: 600 }}"
                        alt="{{ product.featured_image.alt | escape }}"
                        loading="lazy"
                        width="600"
                        height="600"
                      >
                    {% else %}
                      <div class="ai-collection-filter-product-image-placeholder-{{ ai_gen_id }}">
                        {{ 'product-1' | placeholder_svg_tag }}
                      </div>
                    {% endif %}
                  </div>
                  <div class="ai-collection-filter-product-info-{{ ai_gen_id }}">
                    <h3 class="ai-collection-filter-product-title-{{ ai_gen_id }}">
                      <a href="{{ product.url }}">{{ product.title }}</a>
                    </h3>
                    <div class="ai-collection-filter-product-price-{{ ai_gen_id }}">
                      {{ product.price | money }}
                    </div>
                    <a
                      href="{{ product.url }}"
                      class="ai-collection-filter-product-button-{{ ai_gen_id }}"
                    >
                      {{ block.settings.button_label }}
                    </a>
                  </div>
                </div>
              </div>
            {% endfor %}
          {% endif %}
        {% endfor %}
      {% endif %}
    </div>

    <div class="ai-collection-filter-empty-{{ ai_gen_id }}" style="display: none;">
      {{ block.settings.empty_message }}
    </div>
  </div>
</collection-filter-{{ ai_gen_id }}>

<script>
  (function() {
    class CollectionFilter{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
        this.tabs = this.querySelectorAll('.ai-collection-filter-tab-{{ ai_gen_id }}');
        this.products = this.querySelectorAll('.ai-collection-filter-product-{{ ai_gen_id }}');
        this.productsContainer = this.querySelector('.ai-collection-filter-products-{{ ai_gen_id }}');
        this.emptyMessage = this.querySelector('.ai-collection-filter-empty-{{ ai_gen_id }}');
        this.allProducts = [];
      }

      connectedCallback() {
        this.cacheProducts();
        this.setupEventListeners();
        this.showInitialProducts();
      }

      cacheProducts() {
        this.products.forEach((product) => {
          const collection = product.getAttribute('data-collection');
          this.allProducts.push({
            element: product,
            collection: collection,
            html: product.outerHTML
          });
        });
      }

      setupEventListeners() {
        this.tabs.forEach((tab) => {
          tab.addEventListener('click', () => {
            this.filterProducts(tab);
          });
        });
      }

      showInitialProducts() {
        setTimeout(() => {
          this.products.forEach((product, index) => {
            if (product.style.display !== 'none') {
              setTimeout(() => {
                product.classList.add('visible');
              }, index * 50);
            }
          });
        }, 100);
      }

      filterProducts(selectedTab) {
        this.tabs.forEach((tab) => tab.classList.remove('active'));
        selectedTab.classList.add('active');

        const selectedCollection = selectedTab.getAttribute('data-collection');

        let visibleCount = 0;

        this.products.forEach((product) => {
          const productCollection = product.getAttribute('data-collection');

          if (selectedCollection === 'all' || productCollection === selectedCollection) {
            product.style.display = '';
            product.classList.remove('visible');
            visibleCount++;
          } else {
            product.style.display = 'none';
            product.classList.remove('visible');
          }
        });

        if (visibleCount === 0) {
          this.emptyMessage.style.display = 'block';
          this.productsContainer.style.display = 'none';
        } else {
          this.emptyMessage.style.display = 'none';
          this.productsContainer.style.display = 'grid';

          let animationIndex = 0;
          this.products.forEach((product) => {
            if (product.style.display !== 'none') {
              setTimeout(() => {
                product.classList.add('visible');
              }, animationIndex * 50);
              animationIndex++;
            }
          });
        }
      }
    }

    customElements.define('collection-filter-{{ ai_gen_id }}', CollectionFilter{{ ai_gen_id }});
  })();
</script>

